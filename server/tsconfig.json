{
    "compilerOptions": {
        "lib": [
            "ES2017"
        ],
        "module": "CommonJS",
        "target": "ES2017",
        "esModuleInterop": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "./dist",
        "baseUrl": ".",
        "paths": {
            "*": [
                "node_modules/*",
                "src/types/*"
            ]
        },
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true
    },
    "exclude": [
        "node_modules",
        "tests",
        "__tests__",
        "**/*.test.ts",
        "**/*.spec.ts"
    ]
}