{
    "compilerOptions": {
        "lib": [
            "ES6"
        ],
        "module": "CommonJS",
        "target": "ES6",
        "esModuleInterop": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "./dist",
        "baseUrl": ".",
        "paths": {
            "*": [
                "node_modules/*",
                "src/types/*"
            ]
        }
    },
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ]
}